<div class="page-header" id="banner">
  <div class="row">
    <div class="col-lg-12">
      <h5>商品管理</h5>
      <%= link_to "レポート取得", { :controller => "products", :action => "report" }, { :class => "btn btn-primary", :style => "margin-right: 20px;" }  %>
      <%= link_to "商品情報取得", { :controller => "products", :action => "get_jp_info" }, { :class => "btn btn-primary", :style => "margin-right: 20px;" }  %>
      <%= link_to "日本価格取得", { :controller => "products", :action => "get_jp_price" }, { :class => "btn btn-primary", :style => "margin-right: 20px;" }  %>
      <%= link_to "アメリカ価格取得", { :controller => "products", :action => "get_us_price" }, { :class => "btn btn-primary", :style => "margin-right: 20px;" }  %>
      <%= link_to "販売価格取得", { :controller => "products", :action => "calculate" }, { :class => "btn btn-primary", :style => "margin-right: 20px;" }  %>
      <br><br>
      <h5>商品データ <small>全<%= @counter %>件</small></h5>
      <%= paginate @products %>
      <table class="table table-striped table-hover table-bordered table-headerfixed ellipsis tablesorter" id="result_table">
        <thead class="thead-inverse" style="font-size: 9pt;">
          <tr>
            <th width="20%">ASIN</th>
            <th width="20%">SKU</th>
            <th width="20%">出品価格($)</th>
            <th width="10%">仕入価格(円)</th>
            <th width="10%">利益(円)</th>
            <th width="10%">米最低価格($)</th>
            <th width="10%">ボーダ価格($)</th>
          </tr>
        </thead>
        <tbody>
          <% for temp in @products %>
          <tr>
            <td width="20%"><%= temp.asin %></td>
            <td width="20%"><%= temp.sku %></td>
            <td width="20%"><%= temp.us_listing_price %></td>
            <td width="10%"><%= temp.cost_price.to_i %></td>
            <td width="10%"><%= temp.profit.to_i %></td>
            <td width="10%"><%= temp.us_price %></td>
            <td width="10%"><%= temp.minimum_listing_price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @products %>
    </div>
  </div>
</div>
