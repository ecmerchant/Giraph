<div class="page-header" id="banner">
  <div class="row">
    <div class="col-lg-12">
      <h5>価格改定情報</h5>
      <%= link_to("価格改定", {:controller => "products", :action => "revise" }, {:method => :post, :class => "btn btn-primary", :style => "margin-right: 20px;"}) %>
      <%= link_to "改定結果の確認", { :controller => "products", :action => "result" }, { :class => "btn btn-primary", :style => "margin-right: 20px;" }  %>
      <br><br>
      <h5>フィードID：<%= @account.feed_submission_id %></h5>
      <h5>エラーとなった改定結果</h5>
      <%= paginate @products, :param_name => 'error_page' %>
      <table class="table table-striped table-hover table-bordered table-headerfixed ellipsis tablesorter" id="feed_table">
        <thead class="thead-inverse" style="font-size: 9pt;">
          <tr>
            <th width="20%">SKU</th>
            <th width="10%">改定価格[$]</th>
            <th width="5%">数量</th>
            <th width="10%">出荷までの日数</th>
            <th width="10%">出荷経路</th>
            <th width="45%">改定結果</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |temp| %>
          <tr>
            <td width="20%"><%= temp.sku %></td>
            <td width="10%"><%= temp.price %></td>
            <td width="5%"><%= temp.quantity %></td>
            <td width="10%"><%= temp.handling_time %></td>
            <td width="10%"><%= temp.fulfillment_channel %></td>
            <td width="45%"><%= temp.result %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <h5>成功した改定結果</h5>
      <%= paginate @sproducts, :param_name => 'success_page' %>
      <table class="table table-striped table-hover table-bordered table-headerfixed ellipsis tablesorter" id="feed_table">
        <thead class="thead-inverse" style="font-size: 9pt;">
          <tr>
            <th width="20%">SKU</th>
            <th width="10%">改定価格[$]</th>
            <th width="5%">数量</th>
            <th width="10%">出荷までの日数</th>
            <th width="10%">出荷経路</th>
            <th width="45%">改定結果</th>
          </tr>
        </thead>
        <tbody>
          <% @sproducts.each do |temp| %>
          <tr>
            <td width="20%"><%= temp.sku %></td>
            <td width="10%"><%= temp.price %></td>
            <td width="5%"><%= temp.quantity %></td>
            <td width="10%"><%= temp.handling_time %></td>
            <td width="10%"><%= temp.fulfillment_channel %></td>
            <td width="45%"><%= temp.result %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
