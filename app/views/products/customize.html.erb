<div class="page-header" id="banner">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <h3>ツールの初期設定</h3>
      <div class="col-lg-5">
        <%= form_for(@account, {url: products_customize_path, method: 'post'}) do |f| %>
          <div class="form-group">
            <%= f.label :exchange_rate, "為替レート(円/ドル) 　※読取専用" %>
            <%= f.text_field :exchange_rate, class: 'form-control', readonly: 'readonly', style: 'background-color:#FFF;' %>
          </div>
          <div class="form-group">
            <%= f.label :shipping_weight, "梱包重量(kg)" %>
            <%= f.text_field :shipping_weight, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :max_roi, "最大ROI(%)" %>
            <%= f.text_field :max_roi, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :delivery_fee, "発送代行手数料(円)" %>
            <%= f.text_field :delivery_fee, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :payoneer_fee, "Payoneer手数料(%)" %>
            <%= f.text_field :payoneer_fee, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :handling_time, "出荷までの日数" %>
            <%= f.text_field :handling_time, class: 'form-control' %>
          </div>
          <div class="actions">
            <%= f.submit "設定する", {id: "setup_btn", onClick: 'alert("更新しました")', class: 'btn btn-primary'} %>
          </div>
        <% end %>
        <br>
      </div>
      <div class="col-lg-7">
        <div class="col-lg-6">
          <h5>送料A</h5>
          <table class="table table-striped table-hover table-bordered table-headerfixed" id="shipping_table">
            <thead class="thead-inverse">
              <tr>
                <th width="50%">重量(kg未満)</th>
                <th width="50%">送料(円)</th>
              </tr>
            </thead>
            <tbody>
              <% @shipping_cost_A.each do |row| %>
              <tr>
                <td width="50%"><%= row.weight %></td>
                <td width="50%"><%= row.cost %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="col-lg-6">
          <h5>EMS送料表</h5>
          <table class="table table-striped table-hover table-bordered table-headerfixed" id="shipping_table">
            <thead class="thead-inverse">
              <tr>
                <th width="50%">重量(kg未満)</th>
                <th width="50%">送料(円)</th>
              </tr>
            </thead>
            <tbody>
              <% @shipping_cost_EMS.each do |row| %>
              <tr>
                <td width="50%"><%= row.weight %></td>
                <td width="50%"><%= row.cost %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="col-lg-12">
          <%= form_tag('/products/shipping', method:'post', multipart: true, id:"shipping_form") do %>
            <label for="radio_set">アップロード先の選択</label>
            <div class="form-inline" id="radio_set">
              <div class="radio-inline">
                <input type="radio" value="1" name="shipping" id="table1" checked>
                  <label for="man">送料表A</label>
              </div>
              <div class="radio-inline">
                <input type="radio" value="2" name="shipping" id="table2">
                <label for="woman">EMS送料表</label>
              </div>
              <label style="vertical-align:middle; margin-left:20px;">
                <span class="btn btn-primary">
                  送料ファイルの選択
                  <input type="file" name="shipping_list" onChange="$('#shipping_form').submit();" style="display:none">
                </span>
              </label>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
