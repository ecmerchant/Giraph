<div class="page-header" id="banner">
  <div class="row">
    <div class="col-lg-10 col-md-10">
      <h2>アカウントの設定</h2>
      <div class="col-lg-7">
        <%= form_for(@account, {url: products_setup_path, method: 'post'}) do |f| %>
          <p class="lead">日本MWSアカウントの設定</p>
          <div class="form-group">
            <%= f.label :seller_id, "セラーID" %>
            <%= f.text_field :seller_id, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :aws_access_key_id, "AWSキー" %>
            <%= f.text_field :aws_access_key_id, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :secret_key, "秘密キー" %>
            <%= f.text_field :secret_key, class: 'form-control' %>
          </div>
          <br>
          <p class="lead">アメリカMWSアカウントの設定（1店舗目）</p>
          <div class="form-group">
            <%= f.label :us_seller_id1, "アメリカセラーID_1" %>
            <%= f.text_field :us_seller_id1, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :us_aws_access_key_id1, "アメリカAWSキー_1" %>
            <%= f.text_field :us_aws_access_key_id1, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :us_secret_key1, "アメリカ秘密キー_1" %>
            <%= f.text_field :us_secret_key1, class: 'form-control' %>
          </div>
          <br>
          <p class="lead">アメリカMWSアカウントの設定（2店舗目）</p>
          <div class="form-group">
            <%= f.label :us_seller_id2, "アメリカセラーID_2" %>
            <%= f.text_field :us_seller_id2, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :us_aws_access_key_id2, "アメリカAWSキー_2" %>
            <%= f.text_field :us_aws_access_key_id2, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :us_secret_key2, "アメリカ秘密キー_2" %>
            <%= f.text_field :us_secret_key2, class: 'form-control' %>
          </div>
          <br>
          <p class="lead">チャットワーク連携設定</p>
          <div class="form-group">
            <%= f.label :cw_api_token, "APIトークン" %>
            <%= f.text_field :cw_api_token, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :cw_room_id, "通知ルームID" %>
            <%= f.text_field :cw_room_id, class: 'form-control' %>
          </div>
          <div class="actions">
            <%= f.submit "設定する", {id: "setup_btn", onClick: 'alert("更新しました")', class: 'btn btn-primary'} %>
          </div>
        <% end %>
        <br>
        <%= form_tag('/products/import', method:'post', multipart: true, id:"import_form") do %>
          <label>
            <span class="btn btn-primary">
              ASIN/SKU登録
              <input type="file" name="sku_list" onChange="$('#import_form').submit();" style="display:none">
            </span>
          </label>
        <% end %>
        <br>
        <br>
        <div class="form-inline">
        <%= form_tag('/products/reset', method:'post') do %>
          <%= submit_tag("改訂クリア", class: 'btn btn-success',  style: "margin:0px; float:left; margin-right:20px;") %>
        <% end %>

        <%= form_tag('/products/clear', method:'delete') do %>
          <%= submit_tag("SKU無効データ削除", class: 'btn btn-info', style: "margin:0px; float:left; margin-right:20px;") %>
        <% end %>

        <%= form_tag('/products/delete', method:'delete') do %>
          <%= submit_tag("全データ削除", class: 'btn btn-danger', style: "margin:0px; float:left;") %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
